<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    tools:context="com.example.android.musicalstructureapp.MainActivity"
    android:background="#cbffcd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.4"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@drawable/search" />

            <EditText style="@style/Search" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/artists"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/artists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pro8l3m" />

                <TextView
                    style="@style/listItem"
                    android:layout_alignParentBottom="true"
                    android:text="@string/problem" />

                <ImageView
                    style="@style/playIcon"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/dey" />

                <TextView
                    style="@style/listItem"
                    android:layout_alignParentBottom="true"
                    android:text="@string/deys" />

                <ImageView
                    style="@style/playIcon"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="112dp"
                    android:src="@drawable/miuosh" />

                <TextView
                    style="@style/listItem"
                    android:layout_alignParentBottom="true"
                    android:text="@string/miuosh" />

                <ImageView
                    style="@style/playIcon"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="91dp"
                    android:src="@drawable/pentatonix" />

                <TextView
                    style="@style/listItem"
                    android:layout_alignParentBottom="true"
                    android:text="@string/pentatonix" />

                <ImageView
                    style="@style/playIcon"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="@color/artists">

        <ImageView
            android:id="@+id/prev"
            style="@style/playNow"
            android:src="@drawable/prev_button"/>

        <ImageView
            android:id="@+id/play"
            style="@style/playNow"
            android:src="@drawable/play_button"/>

        <ImageView
            android:id="@+id/stop"
            style="@style/playNow"
            android:src="@drawable/pause_button"/>

        <ImageView
            android:id="@+id/next"
            style="@style/playNow"
            android:src="@drawable/next_button"/>

    </LinearLayout>

</LinearLayout>
